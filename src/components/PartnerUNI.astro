---
import { Uni1, Uni2, Uni3, Uni4, Uni5 } from "../assets/universities";
---

<div class="h-[240px] w-full flex flex-col items-center">
  <div class="flex items-center justify-center pt-10 text-4xl">
    <span class="text-bg text-center font-light"
      >Our <span class="text-radGradient font-semibold"
        >Partnering Universities</span
      ></span
    >
  </div>
  <!-- Partners logo section -->
  <div class="flex flex-row group space-x-8 lg:space-x-14 overflow-hidden">
    <div
      class="flex flex-row justify-center space-x-8 lg:space-x-14 items-center pt-[20px] animate-loop-scroll shrink-0"
    >
      <img src={Uni1.src} class="h-[50px] w-auto overflow-hidden" alt="uni1" />
      <img src={Uni2.src} class="h-[80px] w-auto overflow-hidden" alt="uni2" />
      <img
        src={Uni3.src}
        class="h-[80px] w-auto overflow-hidden mix-blend-darken"
        alt="uni3"
      />
      <img
        src={Uni4.src}
        class="h-[90px] w-auto overflow-hidden mix-blend-darken"
        alt="uni4"
      />
      <img
        src={Uni5.src}
        class="h-[80px] w-auto overflow-hidden mix-blend-darken"
        alt="uni5"
      />
      <img
        src={Uni3.src}
        class="h-[80px] w-auto overflow-hidden mix-blend-darken"
        alt="uni6"
      />
    </div>
    <div
      class="flex flex-row justify-center space-x-8 lg:space-x-14 items-center pt-[40px] animate-loop-scroll shrink-0"
    >
      <img src={Uni1.src} class="h-[50px] w-auto overflow-hidden" alt="uni1" />
      <img src={Uni2.src} class="h-[80px] w-auto overflow-hidden" alt="uni2" />
      <img
        src={Uni3.src}
        class="h-[80px] w-auto overflow-hidden mix-blend-darken"
        alt="uni3"
      />
      <img
        src={Uni4.src}
        class="h-[90px] w-auto overflow-hidden mix-blend-darken"
        alt="uni4"
      />
      <img
        src={Uni5.src}
        class="h-[80px] w-auto overflow-hidden mix-blend-darken"
        alt="uni5"
      />
      <img
        src={Uni3.src}
        class="h-[80px] w-auto overflow-hidden mix-blend-darken"
        alt="uni6"
      />
    </div>
  </div>
</div>
